.container
  .row-fluid
    .col-xs-12
      .row
        .col-xs-12
          .panel.panel-default
            .panel-heading New Course Type
            .panel-body
              .panel-body
                =simple_form_for @course_type do |f|
                  .row
                    .col-sm-6.col.xs-12 
                      .col-xs-4
                        =f.label :name
                      .col-xs-8
                        =f.input_field :name 
                        .text-error
                          =f.error :name
                    .col-sm-6.col.xs-12 
                      .col-xs-4
                        =f.label :description
                      .col-xs-8
                        =f.input_field :description 
                        .text-error
                          =f.error :description
                  .row
                    %center
                      =f.submit "Create Course Type"